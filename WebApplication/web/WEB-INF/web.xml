<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>userDB</param-name>
        <param-value>WEB-INF/xml/userDB.xml</param-value>
    </context-param>
    <context-param>
        <param-name>matchDB</param-name>
        <param-value>WEB-INF/xml/matchDB.xml</param-value>
    </context-param>
    <context-param>
        <param-name>cardDB</param-name>
        <param-value>WEB-INF/xml/cardDB.xml</param-value>
    </context-param>    
    <servlet>
        <servlet-name>NewGame</servlet-name>
        <servlet-class>asw1022.servlets.NewGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>asw1022.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>asw1022.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>asw1022.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dixit</servlet-name>
        <servlet-class>asw1022.servlets.Dixit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMatches</servlet-name>
        <servlet-class>asw1022.servlets.ShowMatchesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewGame</servlet-name>
        <url-pattern>/NewGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dixit</servlet-name>
        <url-pattern>/Dixit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMatches</servlet-name>
        <url-pattern>/ShowMatches</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
